<div class="container">
  <div class="row">
    <div class="p-3 mb-2 bg-light text-dark">新規登録</div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/users/shared/error_messages", resource: resource %>

　　<div class="row">
　　  <table class="table-borderless-form">
　　    <tr>
　　      <div class="form-row">
            <div class="field">
              <td><%= f.label :姓 %></td>
              <td><%= f.text_field :last_name, autofocus: true %></td>
            </div>
            <div class="field">
              <td><%= f.label :名 %></td>
              <td><%= f.text_field :first_name, autofocus: true %></td>
            </div>
　　      </div>
　　    </tr>
　　    <tr>
　　      <div class="field">
            <td><%= f.label :セイ%></td>
            <td><%= f.text_field :last_name_kana, autofocus: true %></td>
          </div>
          <div class="field">
            <td><%= f.label :メイ %></td>
            <td><%= f.text_field :first_name_kana, autofocus: true %></td>
          </div>
　　    </tr>
　　    <tr>
　　      <div class="field">
　　        <td><%= f.label :部署 %></td>
　　        <td><%= f.collection_select :department_id, Department.all, :id, :name, include_blank: "選択して下さい" %></td>
          </div>
　　    </tr>
　　    <tr>
　　      <div class="form-group">
            <div class="field">
　　          <td><%= f.label :メールアドレス%></td>
      　　      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </div>
　　      </div>
　　    </tr>
　　    <tr>
　　      <div class="field">
    　　      <td>
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %><br />
    　　      </td>
    　　      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </div>
　　    </tr>
　　    <tr>
　　      <div class="field">
    　　      <td>
              <%= f.label :パスワード %>
              <em>(確認用)</em>
              <br />
    　　      </td>
    　　      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </div>
　　    </tr>

　　    <tr>
　　      <div class="actions">
　　        <td></td>
　　        <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </div>
　　    </tr>
　　  </table>
　　</div>


  <% end %>
  <div class ="row">
    <div class="p-3 mb-2 bg-light text-dark">既に会員済みの方</div>
  </div>

  <div class ="row">
    <table>
      <tr>
        <div class = login-form>
          <td><%= render "public/users/shared/links" %></td>
          <td>からログインして下さい</td>
        </div>
      </tr>
    </table>
  </div>


</div>