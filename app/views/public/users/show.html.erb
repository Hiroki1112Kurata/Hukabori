<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <% if @user == current_user %>
        <%= link_to edit_user_path(@user.id) do %>
          <div class="text-center"><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', style: "border-radius:50%", fallback: "no_image.jpg", size: "100x100", style: "border-radius:50%" %></div>
         <% end %>
      <% else %>
        <div class="text-center"><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', style: "border-radius:50%", fallback: "no_image.jpg", size: "100x100", style: "border-radius:50%" %></div>
      <% end %>

      <table class="table">
        <tbody>
          <tr>
            <td>名前</td>
            <td><%= @user.last_name + @user.first_name %></td>
          </tr>
          <tr>
            <td>所属部署</td>
            <td><%= @user.department.name %></td>
          </tr>
        </tbody>
      </table>
      <div class="d-flex flex-row justify-content-center">
        <%= link_to reports_bookmark_path(@user.id), class: 'btn btn-outline-info col-10 mb-2' do %>
          ブックマーク一覧
        <% end %>

      </div>
      <div class="d-flex flex-row justify-content-center">
        <% if @user == current_user %>
          <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary col-10" do %>
            <i class="fas fa-user"></i>
          <% end %>
        <% end %>

      </div>
    </div>


    <div class="col-sm-8">
      <div class="row">
        <%= render 'public/reports/index', reports: @reports %>

      </div>
    </div>


  </div>
</div>
