<div>
  <div><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></div>
  <p><%= @user.first_name + @user.last_name %></p>
  <p><%= @user.department.name %></p>
  <% if @user == current_user %>
  <div><%= link_to "編集", edit_user_path(@user.id) %></div>
  <% end %>
</div>

<div>
  <h1>投稿一覧</h1>
  <% @reports.each do |report| %>
  <div>
    <div><%= attachment_image_tag report, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></div>
    <p><%= report.title %></p>
    <p><%= report.user.first_name %></p>
    <dib>
      <%= link_to "詳細へ", report_path(report.id) %>
    </dib>
  </div>
<% end %>
</div>
