<div class="container">
  <div class="row text-center">
    <div class="col-sm-12">
      <h2>検索ページ</h2>
    </div>
  </div>

  <%= form_with url:searches_search_path, method: :get, local:true do |f| %>
  <div class="row">
    <div class="col-sm-6 offset-sm-3">

      <div class="row">
        <%= f.label :name, 'キーワード検索'%>
        <%= f.text_field 'search[value]', class: 'form-control'%>
      </div>

      <h4>タグ一覧</h4>
        <div class="d-flex flex-wrap">
          <% @tag_list.each do |list| %>
            <div class="flex mr-4">
              <%= f.radio_button :id, list.id %>
              <%= f.label :id, list.name, {value: list.id, style: "display: inline-block;"} %>
            </div>
          <% end %>
        </div>
      <br/>

      <%= f.hidden_field :order_sort, :value => "1" %>

      <div class="col-sm-12 text-center">
        <%= f.submit :"検索" ,class: 'btn btn-success col-sm-2' %>
      </div>
    </div>
  </div>


  <% end %>

</div>