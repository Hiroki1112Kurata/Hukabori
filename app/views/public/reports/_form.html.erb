<!--render 'public/reports/index', report: @???-->


  <div class="form-group">
    <%= f.label :title, '題名'%>
    <%= f.text_field :title, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image, '画像'%>
    <%= attachment_image_tag @report, :image, :fill, 60, 60, fallback: "no_image.jpg", size: "60x60" %>
    <%= f.attachment_field :image, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content, '作業内容・成果'%>
    <%= f.text_area :content, autofocus: true, size: '10x10', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :learning, '考えたこと・学んだこと'%>
    <%= f.text_area :learning, autofocus: true, size: '10x10', class: 'form-control' %>
  </div>


  <div class="form-group">
    <%= f.label :action, '今後実施すること'%>
    <%= f.text_area :action, autofocus: true, size: '10x10', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :name, 'タグ'%>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
    <p>
      半角スペースを入力することで複数のタグを付けることができます。<br/>
      例：音楽 文芸 スポーツ
    </p>
  </div>