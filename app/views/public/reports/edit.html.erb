<h1>投稿編集</h1>
<%= form_with model:@report, local:true do |f| %>
  <h4>題名</h4>
  <%= f.text_field :title %>
  <h4>画像</h4>
   <%= f.attachment_field :image %>

   <%= attachment_image_tag @report, :image, :fill, 60, 60, fallback: "no_image.jpg", size: "60x60" %>
  <label for="inputImage">画像</label>
  <%= f.attachment_field :image, placeholder: "プロフィール画像" %>

  <h4>作業内容・成果</h4>
  <%= f.text_area :content %>
  <h4>考えたこと・学んだこと</h4>
  <%= f.text_area :learning %>
  <h4>今後実施すること</h4>
  <%= f.text_area :action %>
  
  <%= f.submit "変更を保存" %>
<% end %>