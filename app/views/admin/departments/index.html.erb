<%= render 'layouts/errors', obj: @department %>

<div class="container">
  <h1>部署一覧・追加</h1>

  <div class="row">
    <div class="col-sm-4 offset-sm-4">
    <%= form_with model: [:admin, @department], local:true do |f| %>
      <table>
        <thead>
          <tr>
            <th>追加</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= f.text_field :name, placeholder: "部署名" %>
            </td>
            <td>
              <%= f.submit '新規登録', class: "btn btn-success"%>
            </td>
          </tr>
        </tbody>
      </table>

    <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th style="width: 60%">部署名</th>
            <th style="width: 20%"></th>
          </tr>
        </thead>
        <tbody>
          <% @departments.each do |department| %>
          <tr>
            <td><%= department.name %></td>
            <td class="text-center">
              <%= link_to edit_admin_department_path(department.id), class: "btn btn-success" do %>
                <i class="fas fa-cog"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>