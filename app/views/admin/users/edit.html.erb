<h1>ユーザ編集</h1>

<%= form_with model: [:admin, @user], local:true do |f| %>
<p><%= @user.last_name + @user.first_name %></p>
<div><%= f.collection_select :department_id, Department.all, :id, :name, include_blank: "選択して下さい" %></div>
<div>
  <%= f.radio_button :is_deleted, :false %>
  <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
  <%= f.radio_button :is_deleted, :true %>
  <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
</div>
<%= f.submit "変更を保存" %>
<% end %>
