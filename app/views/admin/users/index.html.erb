<h1>社員一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>画像</th>
      <th>氏名</th>
      <th>部署</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td>
        <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
      </td>
      <td>
    　<%= link_to edit_admin_user_path(user.id) do %>
        <%= user.last_name + user.first_name %>
    　<% end %>
      </td>
      <td><%= user.department.name %></td>
      <td><%= user.email %></td>
      <td>
        <% if user.is_deleted == false %>
          有効
        <% else %>
          無効
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>