<div class="container">
  <div class="row">
     <div class="p-3 mb-2 bg-light text-dark">管理者ログイン</div>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row">
      <table class="table-borderless-form">
        <tr>
          <div class="field">
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td><%= f.label :パスワード %></td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </div>
        </tr>
        <tr>
          <td></td>
          <td>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          </td>
        </tr>
        <tr>
          <div class="actions">
            <td></td>
              <td><%= f.submit "ログイン", class: "btn btn-success" %></td>
          </div>
        </tr>
      </table>
    </div>
    <% end %>
    <div class ="row">
      <div class="p-3 mb-2 bg-light text-dark">ログインできない方</div>
    </div>

    <div class ="row">
      <table>
        <tr>
          <div class = sginup-form>
            <td><%= render "public/users/shared/links" %></td>
            <td>から新規登録・パスワードの変更をして下さい</td>
          </div>
        </tr>
      </table>
    </div>

</div>